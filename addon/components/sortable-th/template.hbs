<a class="btn bg-transparent">
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{#if header.icon}}
      <i class="{{header.icon}}"></i>
    {{/if}}
    {{#if header.translationKey}}
      {{t header.translationKey}}
    {{else if header.label}}
      {{header.label}}
    {{else}}
      {{header.name}}
    {{/if}}
  {{/if~}}
</a>
{{~#if header.sort}}
  <span class="icon-stack">
    <i class="icon {{baseIcon}} icon-stack-1x faded"></i>
    {{#if activeAscending}}
      <i class="icon {{downIcon}} icon-stack-1x"></i>
    {{else if activeDescending}}
      <i class="icon {{upIcon}} icon-stack-1x"></i>
    {{/if}}
  </span>
{{/if}}
